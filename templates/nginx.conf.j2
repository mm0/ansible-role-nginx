user  {{ web_user }};
worker_processes  2;

error_log  /var/log/nginx/error.log warn;
pid        /var/run/nginx.pid;


events {
    worker_connections  1024;
}


http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;
    merge_slashes off;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    keepalive_timeout  65;
    client_max_body_size 5m;
	

    upstream my_site {
      server 127.0.0.1:8080;
    }

    include /etc/nginx/conf.d/*.conf;
    
    server {
        listen 0.0.0.0:80;
        server_name {{ server_domain }} ;
        access_log /var/log/nginx/site.log;

        rewrite ^/index.html / permanent;
        location / {
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $http_host;
            proxy_set_header X-NginX-Proxy true;
            proxy_pass http://my_site/;
            proxy_redirect off;
        #    proxy_http_version 1.1;
        #    proxy_set_header Upgrade $http_upgrade;
        #    proxy_set_header Connection "upgrade";
        }
        location ~* .*\.(jpg|jpeg|gif|png|ico|css|zip|tgz|gz|rar|bz2|pdf|txt|tar|wav|bmp|rtf|js|flv|swf|html|htm|woff)$ {
            access_log off;
            expires max;
            root {{ web_directory }}/public;
        }
        location /socket/ {
                proxy_pass http://127.0.0.1:8080;
        }
    }

    server {
        listen  80;
        server_name {{ server_domain | replace ("www.","") }};
        rewrite ^/(.*) http://{{ server_domain }}/$1 permanent;
    }

    gzip on;
    gzip_http_version 1.1;
    gzip_comp_level 2;
    gzip_types    text/plain text/html text/css
    application/x-javascript text/xml
    application/xml application/xml+rss
    text/javascript;

}
